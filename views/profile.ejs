<%- include("./includes/head.ejs") %>
<section class="w-full h-full">
  <div class="w-full h-[250px] flex flex-col items-center justify-center">
    <a class="size-10 bg-zinc-900 text-white flex justify-center items-center rounded-md mb-2" href="/">
      <i class="fa fa-home"></i>
    </a>
    <% if(isLogin && userInfo._id.toString()===user._id.toString()) { %>
    <form action="/admin/delete-account/<%= userInfo._id %>" method="post">
      <input type="text" name="_csrf" value="<%= csrfToken %>" hidden />
      <button class="bg-red-200 text-red-600 px-2 py-1 rounded-sm border border-red-600 mb-2">Delete Account</button>
    </form>
    <% } %>
    <img
      class="size-28 rounded-full overflow-hidden border-2 border-zinc-900 mb-3 object-cover"
      src="https://a.wattpad.com/useravatar/Official-Akaza.256.518691.jpg"
      alt="<%= user.username %>'s profile image" />
    <h1 class="text-xl"><%= user.username %></h1>
  </div>
  <div class="w-full h-[calc(100%-250px)] p-3 overflow-hidden">
    <h1 class="h-10"><%= user.username %>'s Posts</h1>
    <div
      class="w-full max-h-[calc(100%-2.5rem)] overflow-y-scroll grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-3">
      <a href="/post-details/">
        <div class="overflow-hidden">
          <img
            src="https://c4.wallpaperflare.com/wallpaper/553/119/620/windows-10-windows-10x-windows-11-minimalism-material-minimal-hd-wallpaper-preview.jpg"
            alt="Lorem ipsum, dolor sit amet"
            class="w-full aspect-2/1 mb-1" />
          <h1 class="text-lg mb-1">Lorem ipsum, dolor sit am...</h1>
        </div>
      </a>
    </div>
  </div>
</section>
<%- include("./includes/foot.ejs") %>
