<%- include("../includes/head.ejs") %>
<section class="w-full h-full">
  <div class="w-1/2 max-lg:w-3/4 max-md:w-4/5 max-sm:w-full h-full mx-auto">
    <header
      class="w-full h-14 px-3 flex justify-start items-center border-b-2 border-zinc-950">
      <a
        href="/"
        class="bg-black size-10 flex justify-center items-center text-white mr-2">
        <i class="fa fa-arrow-left"></i>
      </a>
      <h1 class="text-xl">Create a new account</h1>
    </header>
    <% if(errorMsg) { %>
    <div class="w-full px-3">
      <p
        class="py-1 mt-2 bg-pink-100 text-red-500 text-center border border-pink-500">
        <%= errorMsg %>
      </p>
    </div>
    <% } %>
    <form action="/signup" method="post" class="w-full p-3">
      <input type="text" name="_csrf" value="<%= csrfToken %>" hidden />
      <div class="flex flex-col mb-2">
        <label for="username" class="text-zinc-500 mb-1">Username</label>
        <input
          type="text"
          name="username"
          value="<%= oldFormData ? oldFormData.username : '' %>"
          class="px-3 py-1 border-2 border-zinc-400 outline-none focus:border-zinc-950"
          required />
      </div>
      <div class="flex flex-col mb-2">
        <label for="email" class="text-zinc-500 mb-1">Email</label>
        <input
          type="text"
          name="email"
          value="<%= oldFormData ? oldFormData.email : '' %>"
          class="px-3 py-1 border-2 border-zinc-400 outline-none focus:border-zinc-950"
          required />
      </div>
      <div class="flex flex-col mb-2">
        <label for="password" class="text-zinc-500 mb-1">Password</label>
        <div class="w-full flex gap-2">
          <input
            type="password"
            name="password"
            id="password"
            value="<%= oldFormData ? oldFormData.password : '' %>"
            class="w-full px-3 py-1 border-2 border-zinc-400 outline-none focus:border-zinc-950"
            required />
          <button
            class="togglePassword size-9 bg-zinc-900 grid place-items-center text-white rounded-md"
            type="button">
            <i class="fa fa-eye"></i>
          </button>
        </div>
      </div>
      <button
        class="w-full py-2 block mx-auto bg-zinc-950 text-white border border-zinc-950">
        Sign Up
      </button>
    </form>
    <p class="text-center">
      Already have an account?
      <a class="text-indigo-500 hover:underline" href="/login"> Login here </a>
    </p>
  </div>
</section>
<%- include("../includes/foot.ejs") %>
